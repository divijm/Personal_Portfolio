<section id="works"></section>
<div class="container">
	<div class="row centered mt mb">
		<h1><%= @post.title %></h1>
		<button type="submit" class="btn btn-default"><%= link_to "Back", posts_path%></button>
  </div>
</div>

<div class="container">
		<div class="row lefted mb">
			<div class="col-lg-8 col-lg-offset-2">

				<p><%= @post.content.html_safe %></p>
        <div class="mt">
					<p>Posted: <b><%= time_ago_in_words(@post.created_at)  %></b> ago</p>
					<p><%= @post.author %></p>
					<button type="submit" class="btn btn-default"><%= link_to "Back", posts_path%></button>
					<button type="submit" class="btn btn-default"><%= link_to "Edit", edit_post_path(@post)%></button>
					<button type="submit" class="btn btn-default"> <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" } %></button>
        </div>
			</div>


		</div>
	</div>

