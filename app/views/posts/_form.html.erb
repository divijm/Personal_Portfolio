<%= form_for(@post) do |f| %>

    <%= render 'partials/error_messages'%>

     <%= f.label :category %><br>
     <%= f.collection_select(:category_id, Category.all, :id, :name, {prompt: "Choose a category" }) %><br>
     <%= f.label :title %><br>
     <%= f.text_field :title, placeholder: "Type the post title here" %><br>
     <%= f.label :author %><br>
     <%= f.text_field :author, placeholder: "Type your author name here" %><br>
     <%= f.label :content %><br>
     <%= f.text_area :content, size: "60x12", placeholder: "Type the post text here" %><br>
     <%= f.submit %>

<% end %>

